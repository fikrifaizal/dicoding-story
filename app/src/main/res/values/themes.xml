<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingStory" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/madison</item>
        <item name="colorPrimaryVariant">@color/madison_900</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!--  TextView  -->
    <style name="TextMadison" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/madison</item>
    </style>

    <style name="TextMadison.Large">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextMadison.ExtraMedium">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TextMadison.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextMadison.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <!--  button  -->
    <style name="ButtonMadison" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/madison</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  splashscreen  -->
    <style name="SplashscreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/madison</item>
    </style>

    <!--  switch-compat  -->
    <style name="SwitchMadison" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/madison</item>
    </style>

    <!--  switch-compat  -->
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:indeterminateTint">@color/snake_fruit</item>
    </style>
</resources>